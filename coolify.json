{
  "name": "Divino Lanches",
  "description": "Sistema completo de gest√£o para lanchonetes",
  "version": "1.0.0",
  "type": "web",
  "framework": "php",
  "buildpack": "docker",
  "dockerfile": "Dockerfile",
  "port": 80,
  "environment": {
    "DB_HOST": "postgres",
    "DB_PORT": "5432",
    "DB_NAME": "divino_lanches",
    "DB_USER": "postgres",
    "APP_NAME": "Divino Lanches",
    "MULTI_TENANT_ENABLED": "true"
  },
  "services": {
    "postgres": {
      "image": "postgres:15-alpine",
      "environment": {
        "POSTGRES_DB": "divino_lanches",
        "POSTGRES_USER": "postgres"
      },
      "volumes": [
        "postgres_data:/var/lib/postgresql/data",
        "./database/init:/docker-entrypoint-initdb.d"
      ]
    }
  },
  "volumes": {
    "postgres_data": {}
  },
  "healthcheck": {
    "path": "/",
    "interval": "30s",
    "timeout": "10s",
    "retries": 3
  }
}